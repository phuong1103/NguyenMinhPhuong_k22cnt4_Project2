@model NguyenMinhPhuong__2210900141_k22cnt4_Project2.Models.Role

@{
    ViewBag.Title = "Chỉnh sửa quyền truy cập";
    Layout = "~/Areas/NMPAdmin/Views/Shared/_NmpAdminLayout.cshtml";
}
@using (Html.BeginForm())
{@Html.AntiForgeryToken()
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" href="/NMPAdmin/NmpRoles/Index">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active">Chỉnh sửa quyền truy cập</span>
        </nav>
    </div>
</div>
<form action="@Url.Action("Edit", new { id = Model.RoleID })" method="post">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.RoleID)
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="RoleName">Role Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control", placeholder = "Role Name" })
            @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="Description">Mô tả</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Description" })
            @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Lưu thay đổi </button>
        </div>
    </div>

</form>
}
<div>
    <a class="btn btn-secondary btn-tone m-r-5" @Html.ActionLink("Back To List", "Index", new { id = Model.RoleID })</a>
</div>



