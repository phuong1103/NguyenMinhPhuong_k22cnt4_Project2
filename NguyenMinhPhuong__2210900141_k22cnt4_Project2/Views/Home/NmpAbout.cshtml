
@{
    ViewBag.Title = "Về chúng tôi";
    Layout = "~/Views/Shared/_NmpLayout.cshtml";
}
<link rel="stylesheet" href="~/Content/Home/css/style.css">
<script src="~/Content/Home/js/main.js"></script>

<div class="breadcrumb-area breadcrumb-height" >
    <div class="container h-100">
        <div class="row h-100">
            <div class="col-lg-12">
                <div class="breadcrumb-item">
                    <h2 class="breadcrumb-heading">Thông tin shop</h2>
                    <ul>
                        <li>
                            <a @Html.ActionLink("Home", "NmpIndex", "Home") <i class="pe-7s-angle-right"></i></a>
                        </li>
                        <li> - About</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="about" id="gioithieu">
    <div class="row">
        <div class="image">
            <img src="@Url.Content("~/Content/img/About.jpg")" alt="">
        </div>
        <div class="content">
            <p>
                <strong> CHÀO MỪNG ĐẾN VỚI COLORKEY</strong>
                Son Colorkey là một thương hiệu mỹ phẩm nổi bật, nổi tiếng với các dòng son môi chất lượng cao. Sản phẩm của Colorkey có độ bám màu tốt, dễ dàng lên màu và dưỡng ẩm cho môi. Với bảng màu phong phú từ tự nhiên đến nổi bật, Son Colorkey phù hợp với mọi phong cách. Được yêu thích bởi nhiều tín đồ làm đẹp, đây là lựa chọn hoàn hảo cho những ai muốn tỏa sáng và tự tin!
            </p>
            <a class="btn btn-custom-size lg-size btn-primary btn-dark-hover rounded-0" @Html.ActionLink("Trang chủ", "NmpIndex", "Home") </a>
        </div>
    </div>
</section>

<div class="shipping-area section-space-y-axis-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="shipping-item">
                    <div class="shipping-img">
                        <img src="~/Content/Home/images/shipping/icon/plane.png" alt="Shipping Icon">
                    </div>
                    <div class="shipping-content">
                        <h5 class="title">Free Shipping</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 pt-6 pt-md-0">
                <div class="shipping-item">
                    <div class="shipping-img">
                        <img src="~/Content/Home/images/shipping/icon/earphones.png" alt="Shipping Icon">
                    </div>
                    <div class="shipping-content">
                        <h5 class="title">Online Support</h>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 pt-6 pt-lg-0">
                <div class="shipping-item">
                    <div class="shipping-img">
                        <img src="~/Content/Home/images/shipping/icon/shield.png" alt="Shipping Icon">
                    </div>
                    <div class="shipping-content">
                        <h5 class="title">Secure Payment</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
